---
import "@fontsource/hanken-grotesk";
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Fotter.astro";
import { ViewTransitions } from "astro:transitions";
import Navbar from "../components/Navbar.jsx";
---

<!doctype html>
<html class="font-sans bg-gray-100 flex justify-center text-[#222]" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Sm.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="m-0 pt-4 flex flex-col">
    <Header />
    <section class="flex items-start content-start flex-wrap gap-5">
      <slot />
    </section>
    <Footer />
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      body {
        width: 90%;
        gap: calc(15px + 2vw);
      }
      h1 {
        color: #222;
        font-weight: 700;
        font-size: calc(1.5rem + 1.5vw);
        margin: 0px;
      }
    </style>
  </body>
</html>
