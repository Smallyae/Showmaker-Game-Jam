---
interface Props {
  tema: string;
}

const { tema } = Astro.props;
---

<section>
  <h2>Tema</h2>

  <h1>{tema}</h1>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5vw;
  }
  h2 {
    font-size: calc(1em + 2vw);
    font-style: normal;
    font-weight: 700;
    margin: 0px;
  }
  h1 {
    margin: 0px;
    font-size: 10vw;
  }
</style>
