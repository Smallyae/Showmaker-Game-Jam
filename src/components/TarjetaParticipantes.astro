---
interface Props {
  nombre: string;
  apellido: string;
  imagen: string;
  portada: string;
}

const { nombre, apellido, imagen, portada } = Astro.props;
---

<main class="flex flex-col items-start rounded-lg bg-white w-[300px]">
  <img
    class="rounded-lg w-full h-auto"
    src={portada}
    alt="Portada del participante"
  />
  <section class="flex items-center gap-3 py-8 px-4 flex-nowrap self-stretch">
    <divc class="w-1/4">
      <img
        class="rounded-full w-full h-auto"
        src={imagen}
        alt="Imagen del participante"
      />
    </divc>
    <div class="w-9/12 flex flex-col h-auto">
      <h1 class="m-0 p-0 font-bold text-2xl break-all">{nombre}</h1>
      <h1 class="m-0 p-0 font-bold text-2xl break-all">{apellido}</h1>
    </div>
  </section>
</main>
