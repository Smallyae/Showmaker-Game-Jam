---
interface Props {
  texto: string;
}

const { texto } = Astro.props;
---

<button>
  {texto}
</button>

<style>
  button {
    display: flex;
    padding: 16px;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border-radius: 8px;
    background: #222;
    color: #f8f8f8;
    border: none;
  }
  @media (max-width: 600px) {
    button {
      display: none;
    }
  }
</style>
